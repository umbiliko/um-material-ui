{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": {
      "options": [
        120
      ]
    },
    "quotemark": [
      true,
      "single"
    ],
    "whitespace": [
      true,
      "check-module"
    ]
  }
}
